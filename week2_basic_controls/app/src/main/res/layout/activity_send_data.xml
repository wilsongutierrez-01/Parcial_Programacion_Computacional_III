<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendData">

    <ImageView
        android:id="@+id/imgLogSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_ugblog_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/infoSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infoSend"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imgLogSend"/>

    <EditText
        android:id="@+id/txtNameC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoSend"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Name: "/>

    <EditText
        android:id="@+id/txtAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameC"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Age: "/>

    <Button
        android:id="@+id/btnSendC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAge"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/sendData"/>

</RelativeLayout>